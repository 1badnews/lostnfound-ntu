<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="LostandFound" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/NTUblack</item>
        <item name="colorPrimaryVariant">@color/NTUgrey</item>
        <item name="colorOnPrimary">@color/NTUwhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/NTUgrey</item>
        <item name="colorSecondaryVariant">@color/NTUblue</item>
        <item name="colorOnSecondary">@color/NTUwhite</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LostandFoundNoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
